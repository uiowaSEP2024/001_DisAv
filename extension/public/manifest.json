{
  "manifest_version": 3,
  "name": "Infinite Focus",
  "version": "1.0",
  "description": "A Chrome extension built with React",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "permissions": [
    "alarms",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
