{
  "manifest_version": 3,
  "name": "Infinite Focus",
  "description": "A Chrome extension built with React",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "idle"
  ],
  "action": {
    "default_icon": "logo192.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
